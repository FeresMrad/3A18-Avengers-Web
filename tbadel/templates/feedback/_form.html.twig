
{% block body %}

   <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-lg-8 col-md-10">
        <h1 class="text-center mb-5">Feedback</h1>
        <div class="form-container">
          {{ form_start(form) }}
          <div class="form-group">
            {{ form_label(form.rating, 'Rating', {label_attr: {'class': 'form-label'}}) }}
             {{ form_widget(form.rating, {attr: {'class': 'form-control'}}) }}
            {{ form_errors(form.rating, {attr: {'class': 'invalid-feedback'}}) }}
          </div>
          <div class="form-group">
            {{ form_label(form.comment, 'Comment', {label_attr: {'class': 'form-label'}}) }}
            {{ form_widget(form.comment, {attr: {'class': 'form-control'}}) }}
            {{ form_errors(form.comment, {attr: {'class': 'invalid-feedback'}}) }}
          </div>
          </div>
      
        <div class="form-group text-center">
          {{ form_widget(form.save, {attr: {'class': 'btn btn-primary','style': 'background-color: #14B1A1; color: white;'}}) }}
        </div>
      </div>
    </div>
  </div>

{% endblock %}

